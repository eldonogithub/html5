<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} %F:%L - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- org.hibernate.tool.hbm2ddl -->
		<logger name="org.hibernate.tool.hbm2ddl" level="debug"></logger>
		<Logger name="org.hibernate" level="debug"></Logger>
		<Logger name="ca.blackperl" level="debug"></Logger>
		<Logger name="ca.blackperl.utils.AuditInterceptor" level="debug"></Logger>
		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>