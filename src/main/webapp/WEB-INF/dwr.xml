<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://getahead.org/dwr/dwr30.dtd">

<dwr>
	<allow>
		<create creator="new" javascript="AjaxBean">
			<param name="class" value="ca.blackperl.dwr.bean.AjaxBean" />
		</create>
		
		<create creator="new" javascript="AjaxHibernate">
			<param name="class" value="ca.blackperl.dwr.bean.AjaxHibernate" />
		</create>
		
		<create creator="struts" javascript="PersonForm">
			<param name="formBean" value="personForm" />
		</create>
		
		<create creator="struts" javascript="EventForm">
			<param name="formBean" value="eventForm" />
		</create>
		
		<convert match="ca.blackperl.dwr.bean.*" converter="bean" javascript="*"></convert>
		<convert match="ca.blackperl.dwr.enums.*" converter="enum"></convert>
		<convert match="ca.blackperl.hibernate.*" converter="bean" javascript="*"></convert>

	</allow>
</dwr>